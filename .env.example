# ==================================
# JB ACOPIADORA
# ==================================

# ----------------------------------
# CONFIGURACIÓN DE BASE DE DATOS
# ----------------------------------
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=bd_name
DB_USERNAME=root
DB_PASSWORD=

# ----------------------------------
# CONFIGURACIÓN DE LA APLICACIÓN
# ----------------------------------
APP_NAME="JB Acopiadora"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/jbacopiadora/public

# ----------------------------------
# CONFIGURACIÓN DE SESIONES
# ----------------------------------
# Tiempo de sesión en MINUTOS (120 = 2 horas)
SESSION_LIFETIME=120
SESSION_NAME=jb_session

# ----------------------------------
# CONFIGURACIÓN DE SEGURIDAD
# ----------------------------------
APP_KEY=
SALT_KEY=

# ----------------------------------
# CONFIGURACIÓN DE UPLOADS
# ----------------------------------
UPLOAD_MAX_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf

# ----------------------------------
# CONFIGURACIÓN DE PAGINACIÓN
# ----------------------------------
ITEMS_PER_PAGE=20

# ----------------------------------
# CONFIGURACIÓN DE EMAIL (Opcional)
# ----------------------------------
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME="JB Acopiadora"

# ----------------------------------
# CONFIGURACIÓN DE REPORTES
# ----------------------------------
DATE_FORMAT=d/m/Y
DATETIME_FORMAT=d/m/Y H:i

# ----------------------------------
# CONFIGURACIÓN DE LOGS
# ----------------------------------
LOG_LEVEL=debug
LOG_FILE=app.log

# ----------------------------------
# BACKUP AUTOMÁTICO
# ----------------------------------
BACKUP_ENABLED=true
BACKUP_PATH=../backups/
BACKUP_RETENTION_DAYS=30